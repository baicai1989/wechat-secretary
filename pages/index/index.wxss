.item_bg{
  background-size: cover;
  background-color: #666;
  width: 100%;
  overflow:hidden;
  padding-bottom: 10rpx;
  background-position: top;
  background-repeat: no-repeat;
  box-shadow: 10px 5px 10px #ddd;
}
.navigator {
  background-color: rgba(3, 169, 244, 0);
  height: 44px;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  display: flex;
  flex-direction: row;
}
.leftButton {
  width: 50px;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.leftButton > image {
  width: 25px;
  height: 25px;
}
.title {
  height: 44px;
  margin-right: 50px;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.title > text {
  font-size: 16px;
  color: #FFF;
  font-weight: 500;
}

.header_image {
  width: 100%;
  height: 250px;
}

.container {
  width: 100%;
}
.share{
  width: 100%;
  height: 120rpx;
}
/* 搜索 */
.share_btn{
  position: relative;
  width: 100%;
  display: flex;
  padding: 20rpx  20rpx 0 20rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
.share_btn input{
  width: 80%;
  border: 1px solid #FFF;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-indent: 10rpx;
  color: #f3f3f3;
  height: 70rpx;
  
}
.share_btn button{
  font-size: 30rpx;
  color: #f3f3f3;
}
/* 中间部分 */
.list_scroll{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.flex_scroll{
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap:wrap;
}
.item_scroll{
  width: 300rpx;
  box-shadow: 0px 0px 10px #ddd;
  text-align: center;
  font-size: 28rpx;
  margin: 15rpx;
  display: inline-block;
  background-color: #fff;
  height: 400rpx;
}
.item_img{
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  background-image: url('http://image.wufazhuce.com/FkLM1eJH209S21sA5iMJ8fkc_0gP');
  background-size: cover;
}
.item_text{
  height: 100rpx;
  line-height: 100rpx;
   background: #000;
  -webkit-background-clip: text; 
  -moz-background-clip: text; 
  background-clip: text; 
  color: transparent; 
  text-shadow: 0 3px 3px rgba(255,255,255,0.5);
}

/* footer */
.list_footer{
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  /* color: #999; */
}
.list_footer text{
  /* background: #666;  */
  background: orangered;
  -webkit-background-clip: text; 
  -moz-background-clip: text; 
  background-clip: text; 
  color: transparent; 
  font-size: 40rpx;
  text-shadow: 0 3px 3px rgba(255,255,255,0.5);
}